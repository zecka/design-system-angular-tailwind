{
    "name": "@acme/ds-tokens",
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "build": "rimraf dist && pnpm run build:tokens && pnpm run build:vars",
        "build:tokens": "tsx src/build.ts",
        "build:vars": "tsup src/variable-groups.ts --format esm,cjs --dts --out-dir dist",
        "pull-tokens": "tsx src/fetch-tokens.ts"
    },
    "peerDependencies": {
        "stylelint": "^16.24.0"
    },
    "devDependencies": {
        "@types/node": "^24.5.2",
        "@types/stylelint": "^14.0.0",
        "fs": "0.0.1-security",
        "json-to-ts": "^2.1.0",
        "rimraf": "^6.0.1",
        "style-dictionary": "^5.0.4",
        "stylelint": "^16.24.0",
        "tsup": "^8.5.0",
        "tsx": "^4.20.5"
    },
    "dependencies": {
        "dotenv": "^17.2.2"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./*": {
            "import": "./dist/*.js",
            "types": "./dist/*.d.ts",
            "default": "./dist/*"
        },
        "./*.css": "./dist/*.css",
        "./*.json": "./dist/*.json"
    }
}