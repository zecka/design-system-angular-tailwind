{
  "name": "@acme/ds-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "build": "ng build ds-angular && pnpm run compodoc",
    "dev": "ng build ds-angular --watch --configuration development",
    "test": "ng test",
    "compodoc": "compodoc -p tsconfig.lib.json -e json -d dist/compodoc"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "peerDependencies": {
    "@angular/cdk": "^20.0.0",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@floating-ui/dom": "^1.6.0",
    "ng-primitives": "^0.79.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.0",
    "@angular/build": "^20.3.1",
    "@angular/cli": "^20.3.1",
    "@angular/compiler-cli": "^20.3.0",
    "@compodoc/compodoc": "^1.1.30",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.5.2",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.3.0",
    "typescript": "~5.9.2"
  }
}